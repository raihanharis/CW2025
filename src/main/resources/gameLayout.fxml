<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import java.net.URL?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.comp2042.GuiController">

    <!-- ================= LEFT: GAME BOARD ================= -->
    <center>
        <GridPane fx:id="gamePanel" hgap="1" vgap="1" />
    </center>

    <!-- ================= RIGHT: NEXT BRICK PREVIEW PANEL ================= -->
    <right>
        <VBox spacing="12" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <Label text="Next:" style="-fx-font-size: 20; -fx-text-fill: white;" />

            <!-- This GridPane will now hold the NEXT BRICK preview -->
            <GridPane fx:id="brickPanel" hgap="1" vgap="1" />

            <Group fx:id="groupNotification" />
        </VBox>
    </right>

    <!-- ================= BOTTOM: GAME OVER PANEL ================= -->
    <bottom>
        <GameOverPanel fx:id="gameOverPanel" />
    </bottom>

    <stylesheets>
        <URL value="@window_style.css" />
    </stylesheets>
</BorderPane>
