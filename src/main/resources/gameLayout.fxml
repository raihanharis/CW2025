<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.Group?>
<?import com.comp2042.GameOverPanel?>
<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane fx:controller="com.comp2042.GuiController"
           xmlns:fx="http://javafx.com/fxml"
           style="-fx-background-color: #1a1a2e;">

    <!-- Main game content -->
    <HBox spacing="20" alignment="CENTER">
        <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
        
        <!-- LEFT: Game Board with border -->
        <VBox alignment="CENTER" style="-fx-background-color: #16213e; -fx-padding: 8; -fx-background-radius: 5;">
            <GridPane fx:id="gamePanel"
                      hgap="1"
                      vgap="1"
                      style="-fx-background-color: #0f0f23; -fx-padding: 2;"/>
        </VBox>

        <!-- RIGHT: Next brick preview -->
        <VBox spacing="10" alignment="TOP_CENTER">
            <VBox spacing="5" alignment="CENTER" style="-fx-background-color: #16213e; -fx-padding: 10; -fx-background-radius: 5;">
                <Label text="NEXT" style="-fx-text-fill: #e0e0e0; -fx-font-size: 12; -fx-font-weight: bold;"/>
                <GridPane fx:id="brickPanel" hgap="1" vgap="1" alignment="CENTER"/>
            </VBox>
            
            <!-- Score notification area -->
            <Group fx:id="groupNotification"/>
        </VBox>
    </HBox>

    <!-- GAME OVER PANEL - centered overlay -->
    <GameOverPanel fx:id="gameOverPanel" visible="false" 
                   style="-fx-background-color: rgba(0,0,0,0.7); -fx-padding: 20;"/>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</StackPane>
