<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.Group?>
<?import com.comp2042.GameOverPanel?>
<?import java.net.URL?>
<?import javafx.scene.control.*?>

<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">

    <!-- MAIN GAME AREA -->
    <BorderPane fx:id="gameBoard"
                prefWidth="480"
                prefHeight="640"
                styleClass="gameBoard">

        <!-- CENTER: Falling brick + background -->
        <center>
            <GridPane fx:id="gamePanel"
                      layoutX="40"
                      layoutY="30"
                      hgap="1"
                      vgap="1"/>
        </center>

        <!-- TOP-RIGHT: Next Brick Preview -->
        <top>
            <HBox alignment="TOP_RIGHT">
                <VBox alignment="TOP_RIGHT" spacing="6">
                    <Label text="Next:" style="-fx-text-fill: white; -fx-font-size: 16;" />
                    <GridPane fx:id="brickPanel" hgap="1" vgap="1"/>
                </VBox>
            </HBox>
        </top>

    </BorderPane>

    <!-- SCORE POPUP GROUP -->
    <Group fx:id="groupNotification"
           layoutX="20"
           layoutY="200">
    </Group>

    <!-- GAME OVER PANEL -->
    <GameOverPanel fx:id="gameOverPanel"
                   layoutX="160"
                   layoutY="250"
                   visible="false"/>

    <!-- CSS -->
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</Pane>
