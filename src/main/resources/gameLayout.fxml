<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.Group?>
<?import com.comp2042.GameOverPanel?>
<?import java.net.URL?>
<?import javafx.scene.control.*?>

<!-- Root: StackPane for perfect centering, black background -->
<StackPane fx:id="rootPane"
           fx:controller="com.comp2042.GuiController"
           xmlns:fx="http://javafx.com/fxml"
           style="-fx-background-color: #000000;">

    <!-- Game content container - always centered -->
    <HBox fx:id="gameContainer" alignment="CENTER" spacing="15">
        
        <!-- Game Board -->
        <GridPane fx:id="gamePanel" hgap="1" vgap="1"/>

        <!-- Next Preview Panel -->
        <VBox fx:id="nextPanel" alignment="TOP_CENTER" spacing="5">
            <Label fx:id="nextLabel" text="NEXT" style="-fx-text-fill: #888888;"/>
            <GridPane fx:id="brickPanel" hgap="1" vgap="1"/>
            <Group fx:id="groupNotification"/>
        </VBox>
    </HBox>

    <!-- Pause Overlay - semi-transparent with centered text -->
    <VBox fx:id="pauseOverlay" 
          visible="false" 
          alignment="CENTER" 
          style="-fx-background-color: rgba(0, 0, 0, 0.75);">
        <Label text="PAUSED" 
               style="-fx-font-size: 48; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Label text="Press P to resume" 
               style="-fx-font-size: 16; -fx-text-fill: #aaaaaa; -fx-padding: 10 0 0 0;"/>
    </VBox>

    <!-- Game Over Overlay -->
    <GameOverPanel fx:id="gameOverPanel" visible="false"/>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>
