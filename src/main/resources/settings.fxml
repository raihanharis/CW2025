<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>

<!-- Settings Scene -->
<VBox fx:id="settingsRoot"
      fx:controller="com.comp2042.SettingsController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="25"
      VBox.vgrow="ALWAYS"
      style="-fx-background-color: linear-gradient(to bottom, #0a0a1a, #000000); -fx-padding: 30;">
    
    <!-- SETTINGS Title -->
    <Label text="SETTINGS"
           styleClass="settings-title"/>
    
    <!-- Settings Container -->
    <VBox alignment="CENTER" spacing="22" style="-fx-min-width: 400;">
        
        <!-- Master Volume Section -->
        <VBox alignment="CENTER" spacing="10" styleClass="settings-section">
            <Label text="MASTER VOLUME" styleClass="settings-label"/>
            <HBox alignment="CENTER" spacing="15">
                <Slider fx:id="volumeSlider"
                        min="0"
                        max="100"
                        value="100"
                        prefWidth="300"
                        showTickLabels="false"
                        showTickMarks="true"
                        majorTickUnit="25"
                        minorTickCount="5"/>
                <Label fx:id="volumeLabel"
                       text="100%"
                       styleClass="settings-value"/>
            </HBox>
        </VBox>
        
        <!-- SFX Toggle Section -->
        <VBox alignment="CENTER" spacing="10" styleClass="settings-section">
            <Label text="SFX" styleClass="settings-label"/>
            <ToggleButton fx:id="sfxToggle"
                          text="ON"
                          styleClass="settings-toggle"/>
        </VBox>
        
        <!-- Ghost Piece Toggle Section -->
        <VBox alignment="CENTER" spacing="10" styleClass="settings-section">
            <Label text="SHOW GHOST PIECE" styleClass="settings-label"/>
            <ToggleButton fx:id="ghostToggle"
                          text="ON"
                          styleClass="settings-toggle"/>
        </VBox>
        
        <!-- Hard Drop Toggle Section -->
        <VBox alignment="CENTER" spacing="10" styleClass="settings-section">
            <Label text="HARD DROP" styleClass="settings-label"/>
            <ToggleButton fx:id="hardDropToggle"
                          text="ON"
                          styleClass="settings-toggle"/>
        </VBox>
        
        <!-- Difficulty Section -->
        <VBox fx:id="difficultySection" alignment="CENTER" spacing="10" styleClass="settings-section">
            <Label text="DIFFICULTY" styleClass="settings-label"/>
            <HBox alignment="CENTER" spacing="15">
                <RadioButton fx:id="easyRadio"
                            text="EASY"
                            styleClass="settings-radio"/>
                <RadioButton fx:id="mediumRadio"
                            text="MEDIUM"
                            styleClass="settings-radio"/>
                <RadioButton fx:id="hardRadio"
                            text="HARD"
                            styleClass="settings-radio"/>
            </HBox>
        </VBox>
        
        <!-- Spacer before Back Button for breathing room -->
        <Region prefHeight="18"/>
        
        <!-- Back Button -->
        <Button fx:id="backButton"
                text="BACK"
                onAction="#onBackClick"
                styleClass="main-menu-button settings-back-button"
                prefWidth="200"
                prefHeight="50"/>
    </VBox>
    
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</VBox>

