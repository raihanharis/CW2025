<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>

<!-- Settings Scene -->
<VBox fx:id="settingsRoot"
      fx:controller="com.comp2042.SettingsController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="25"
      prefWidth="900"
      prefHeight="700"
      minWidth="900"
      minHeight="700"
      maxWidth="900"
      maxHeight="700"
      style="-fx-background-color: linear-gradient(to bottom, #0a0a1a, #000000); -fx-padding: 30; -fx-scale-x: 1; -fx-scale-y: 1;">
    
    <!-- SETTINGS Title -->
    <Label text="SETTINGS"
           styleClass="settings-title"/>
    
    <!-- Settings Container -->
    <VBox alignment="CENTER" spacing="22" style="-fx-min-width: 400;">
        
        <!-- Ghost Piece Toggle Section -->
        <VBox alignment="CENTER" spacing="10" styleClass="settings-section">
            <Label text="SHOW GHOST PIECE" styleClass="settings-label"/>
            <ToggleButton fx:id="ghostToggle"
                          text="ON"
                          styleClass="settings-toggle"/>
        </VBox>
        
        <!-- Hard Drop Toggle Section -->
        <VBox alignment="CENTER" spacing="10" styleClass="settings-section">
            <Label text="HARD DROP" styleClass="settings-label"/>
            <ToggleButton fx:id="hardDropToggle"
                          text="ON"
                          styleClass="settings-toggle"/>
        </VBox>
        
        <!-- Difficulty Section -->
        <VBox fx:id="difficultySection" alignment="CENTER" spacing="10" styleClass="settings-section" focusTraversable="false">
            <Label text="DIFFICULTY" styleClass="settings-label"/>
            <HBox alignment="CENTER" spacing="15" focusTraversable="false">
                <RadioButton fx:id="easyRadio"
                            text="EASY"
                            styleClass="settings-radio"
                            focusTraversable="false"/>
                <RadioButton fx:id="mediumRadio"
                            text="MEDIUM"
                            styleClass="settings-radio"
                            focusTraversable="false"/>
                <RadioButton fx:id="hardRadio"
                            text="HARD"
                            styleClass="settings-radio"
                            focusTraversable="false"/>
            </HBox>
        </VBox>
        
        <!-- Spacer before Back Button for breathing room -->
        <Region prefHeight="25"/>
        
        <!-- Back Button -->
        <Button fx:id="backButton"
                text="BACK"
                onAction="#onBackClick"
                styleClass="main-menu-button settings-back-button"
                prefWidth="200"
                prefHeight="50"/>
    </VBox>
    
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</VBox>

